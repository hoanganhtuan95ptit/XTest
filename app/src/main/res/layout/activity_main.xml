<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnNotificationPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Cấp quyền thông báo" />

    <Button
        android:id="@+id/btnOpenBackgroundSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Cho phép chạy ngầm (Pin)" />

    <Button
        android:id="@+id/btnOpenAutoStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bật tự động khởi chạy" />

</LinearLayout>